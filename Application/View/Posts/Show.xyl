<?xml version="1.0" encoding="utf-8"?>
<?xyl-use href="hoa://Application/View/Posts/Comment.xyl"?>

<overlay xmlns="http://hoa-project.net/xyl/xylophone">
  <div id="main">
    <yield select="?f:postsfrag#back_to_list" />

    <yield bind="?post">
      <h2 bind="?title" />
      <p bind="?content" />
      <p>
        <a href="@edit_post:id=(?id)">Edit</a> -
        <a href="@delete_post:id=(?id)">Delete</a>
      </p>
    </yield>

    <h2>Comments</h2>
    <comment bind="?comments" />
  </div>
</overlay>